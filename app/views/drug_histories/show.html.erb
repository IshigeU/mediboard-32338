<!DOCTYPE html>
<html lang="ja">

<head>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>Simple Sidebar - Start Bootstrap Template</title>

  <!-- Bootstrap core CSS -->
  <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

  <!-- Custom styles for this template -->
  <link href="css/simple-sidebar.css" rel="stylesheet">

   <!-- Google fonts-->
  <link href="https://fonts.googleapis.com/css2?family=Noto+Serif+JP&family=Raleway:ital,wght@1,600&display=swap" rel="stylesheet">

</head>

<body>

  <div class="d-flex" id="wrapper">

    <!-- Sidebar -->

    <%= render partial: "tweets/sidebar-profile" %>
    
    <!-- /#sidebar-wrapper -->

    <!-- Page Content -->
    <div id="page-content-wrapper">

      <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
        <button class="btn btn-primary" id="menu-toggle">←→</button>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
            <li class="nav-item">
              <%= link_to 'マイページ', tweets_path, class: 'nav-link' %>
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Menu
              </a>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                <%= link_to '薬歴管理', drug_histories_path, class: "dropdown-item" %>
                <%= link_to 'お薬データベース', "#", class: "dropdown-item" %>
                <%= link_to '薬剤師検索', "#", class: "dropdown-item" %>
                <div class="dropdown-divider"></div>
                <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "dropdown-item" %>
              </div>
            </li>
          </ul>
        </div>
      </nav>

      <div class="container">
        <div class="row">
          <div class="col-md-8">
            <h1 class="my-4 font-tweet">検査値詳細</h1>
            <div class="card mb-4">
              <div class="card-body">
                <p id="notice"><%= notice %></p>
                  <p>
                    <strong>タイトル</strong>
                    <%= @drug_history.hp_name %>
                  </p>

                  <p>
                    <strong>時間</strong>
                    <%= @drug_history.start_time.strftime("%Y-%m-%d %H:%M") %>
                  </p>

                  <p>
                    <strong>内容</strong>
                    <%= @drug_history.text %>
                  </p>

                  <p>
                    <strong>病院・クリニック名</strong>
                    <%= @drug_history.hp_name %>
                  </p>

                  <p>
                    <strong>身長</strong>
                    <%= @drug_history.height_id %>
                  </p>

                  <p>
                    <strong>体重</strong>
                    <%= @drug_history.weight_id %>
                  </p>

                  <p>
                    <strong>血圧</strong>
                    <%= @drug_history.pressure_id %>
                  </p>

                  <p>
                    <strong>白血球(WBC)</strong>
                    <%= @drug_history.wbc_id %>
                  </p>

                  <p>
                    <strong>ヘモグロビン濃度(Hb)</strong>
                    <%= @drug_history.hb_id %>
                  </p>

                  <p>
                    <strong>血小板数(PLT)</strong>
                    <%= @drug_history.plt_id %>
                  </p>

                  <p>
                    <strong>血液凝固系検査値(PT-INR)</strong>
                    <%= @drug_history.pt_inr_id %>
                  </p>

                  <p>
                    <strong>AST</strong>
                    <%= @drug_history.ast_id %>
                  </p>

                  <p>
                    <strong>ALT</strong>
                    <%= @drug_history.alt_id %>
                  </p>

                  <p>
                    <strong>γ-GDP</strong>
                    <%= @drug_history.gdp_id %>
                  </p>

                  <p>
                    <strong>血清クレアチニン(Scr)</strong>
                    <%= @drug_history.scr_id %>
                  </p>

                  <p>
                    <strong>糸球濾過量(eGFR)</strong>
                    <%= @drug_history.egfr_id %>
                  </p>

                  <p>
                    <strong>CK(CPK)</strong>
                    <%= @drug_history.cpk_id %>
                  </p>

                  <p>
                    <strong>カリウム値</strong>
                    <%= @drug_history.k_id %>
                  </p>

                  <p>
                    <strong>血糖値(HbA1c)</strong>
                    <%= @drug_history.hba1c_id %>
                  </p>

                  <%= link_to '編集', edit_drug_history_path(@drug_history) %> |
                  <%= link_to '戻る', drug_histories_path %>

              </div>
            </div>
          </div>
            <!-- /#wrapper -->
        </div>
    <!-- /.row -->

  </div>
  <!-- /.container -->

  <!-- Bootstrap core JavaScript -->
  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Bootstrap core JavaScript -->
  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Menu Toggle Script -->
  <script>
    $("#menu-toggle").click(function(e) {
      e.preventDefault();
      $("#wrapper").toggleClass("toggled");
    });
  </script>

</body>

</html>