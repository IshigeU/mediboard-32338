<p id="notice"><%= notice %></p>

<h1>自分の日記</h1>

<table>
  <thead>
    <tr>
      <th>薬歴管理</th>
      <th>時間</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @drug_histories.each do |drug_history| %>
      <tr>
        <td><%= drug_history.hp_name %></td>
        <td><%= drug_history.start_time.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= link_to 'Show', drug_history %></td>
        <td><%= link_to 'Edit', edit_drug_history_path(drug_history.id) %></td>
        <td><%= link_to 'Destroy',drug_history_path(drug_history.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '検査値を記録する', new_drug_history_path %>

<%= month_calendar events: @drug_histories do |date, drug_histories| %>
  <%= date.day %>

  <% drug_histories.each do |drug_history| %>
    <div>
      <%= link_to drug_history.hp_name, drug_history %>
    </div>
  <% end %>
<% end %>